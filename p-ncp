shift_window
// need to keep track of last_recvd_ack

int curr_seq_num
packet *window[window_size]
char *ack_array
packet *cum_ack

for(;;) {

    if(window[0] == null) {
        for(to window_size) {
            fread(send_buf[i]);
            send(send_buf[i]);
        }
    }
    select //start timer
    if (not timeout) {
        recv(&cum_ack);
        for(cum_ack.index - curr_seq_num)
            fread()
            window[curr_seq_num] //MOD
            ack[curr_seq_num] = 0
            curr_seq_num++;
        for(cum_ack.payload) {
            if (cum_ack.payload[i] == 0)
                send(window[payload[i]]);
            else
                ack_array[i] = 1;
        }
    } else {
        iterate through ack and resend unacked packets
    }
}
